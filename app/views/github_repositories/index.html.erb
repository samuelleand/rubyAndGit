<div>
<h1>Repositórios</h1></br>
</div>

<p id="notice"><%= notice %></p>

<h4>Realize a sua pesquisa</h4>
<%= form_tag(root_path, :method => :get) do %>
  <%= text_field_tag 'search', nil, placehorder:"Repositório desejado..." %>
  <%= submit_tag 'Buscar' %>
  <% end %>
  </br>
  <%= link_to 'Lista de repositórios salvos', repositories_path %>
</br>
</br>
<% if @github_repositories.nil? == false then %> 
  <table>
    <thead>
      <tr>
        <th>Criador</th>
        <th>Nome</th>
        <th>Descrição</th>
        <th>Linguagem</th>
        <th>Link</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
    
      <% @github_repositories.each do |repository| %>
        <tr>
            <td><%= repository.owner %></td>
            <td><%= repository.name %></td>
            <td><%= repository.description %></td>
            <td><%= repository.language %></td>
            <td><%= repository.url %></td>
            <td><%= link_to "Adicionar", repositories_path(:param1 => repository.owner,
             :param2 => repository.name, :param3 => repository.description, :param4 => repository.language,
             :param5 => repository.url, ), method: :post %></td>
          </tr>    
        <% end %>
    
    </tbody>
  </table>
<% end %>  
<br>